<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="Theme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/Widget.App.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.App.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="ExapandedToolbarTitleTextAppearance" parent="android:TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CollapsedToolbarTitleTextAppearance" parent="android:TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="PointChipTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="android:TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ToolbarSubtitleTextAppearance" parent="android:TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BottomNavBarTextAppearanceActive" parent="android:TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavBarTextAppearanceInactive" parent="android:TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonTextAppearance" parent="android:TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabTextAppearance" parent="android:TextAppearance.Material.Widget.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Theme.PdfView.SelectedTheme" parent="Theme.PdfView.Light">
        <item name="pdfView_backIcon">@drawable/ic_btn_back</item>
        <item name="pdfView_actionBarTint">@color/colorPrimary</item>
        <item name="pdfView_titleTextStyle">@style/ActionBarTitleTextAppearance</item>
    </style>

    <style name="ChipTextAppearance" parent="android:TextAppearance.Material">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ActionBarTitleTextAppearance" parent="android:TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>