<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.opustech.bookvan">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity
            android:name="com.opustech.bookvan.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.opustech.bookvan.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.admin.AdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.user.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.user.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.user.ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.user.ScheduleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.admin.ChatAdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.admin.MessageAdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.transport.TransportProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.transport.TransportProfileAdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.transport.TransportEditProfileAdminActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.opustech.bookvan.ui.transport.TransportCompanyAdminActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>